@model CodeZone.DAL.Entities.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h1>Delete Department</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this department?</h3>
    @if (Model.Employees != null && Model.Employees.Any())
    {
        <p class="mb-0"><strong>Warning:</strong> This department has @Model.Employees.Count employee(s) assigned to it. Deleting this department may affect employee records.</p>
    }
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Department ID</dt>
            <dd class="col-sm-9">@Model.DepartmentId</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Code</dt>
            <dd class="col-sm-9"><span class="badge bg-secondary">@Model.Code</span></dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.Location</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form> 