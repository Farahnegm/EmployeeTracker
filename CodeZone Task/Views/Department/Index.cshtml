@model IEnumerable<CodeZone.DAL.Entities.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div id="departmentTableWrapper">
<table class="table table-striped">
    <thead>
        <tr>
            <th>Department ID</th>
            <th>Name</th>
            <th>Code</th>
            <th>Location</th>
            <th>Employee Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartmentId</td>
                <td>@item.Name</td>
                <td><span class="badge bg-secondary">@item.Code</span></td>
                <td>@item.Location</td>
                <td>
                    <span class="badge bg-info">@(item.Employees?.Count ?? 0) employees</span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DepartmentId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-warning btn-sm">Edit</a>
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-danger btn-sm delete-department" data-id="@item.DepartmentId">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

@section Scripts {
<script>
function showNotification(message, type) {
    $('#ajaxNotification').remove();
    var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
    var notification = $(`<div id="ajaxNotification" class="alert ${alertClass} alert-dismissible fade show" role="alert" style="position: fixed; top: 20px; right: 20px; z-index: 9999;">
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>`);
    $('body').append(notification);
    setTimeout(function() { notification.alert('close'); }, 3000);
}

$(document).ready(function() {
    $('#departmentTableWrapper .delete-department').click(function() {
        var $row = $(this).closest('tr');
        var id = $(this).data('id');
        if (confirm('Are you sure you want to delete this department?')) {
            $.ajax({
                url: '/Department/Delete/' + id,
                type: 'POST',
                headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() },
                success: function() {
                    $row.fadeOut(400, function() { $(this).remove(); });
                    showNotification('Department deleted successfully!', 'success');
                    setTimeout(function() { location.reload(); }, 1000);
                },
                error: function() {
                    showNotification('Error deleting department.', 'danger');
                }
            });
        }
    });
});
</script>
} 