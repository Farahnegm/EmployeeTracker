@model CodeZone.DAL.Entities.Attendance

@{
    ViewData["Title"] = "Delete Attendance Record";
}

<h1>Delete Attendance Record</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this attendance record?</h3>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Attendance ID</dt>
            <dd class="col-sm-9">@Model.AttendanceId</dd>

            <dt class="col-sm-3">Employee</dt>
            <dd class="col-sm-9">
                @Model.Employee?.FullName (@Model.Employee?.EmployeeCode)
                <br />
                <small class="text-muted">@Model.Employee?.Email</small>
            </dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Employee?.Department?.Name</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("MMMM dd, yyyy")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.Status == CodeZone.DAL.Entities.Enum.AttendanceStatus.Present)
                {
                    <span class="badge bg-success">Present</span>
                }
                else
                {
                    <span class="badge bg-danger">Absent</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form> 