@model CodeZone.BLL.DTOs.EmployeeDto

<div class="card">
    <div class="card-header">
        <h6 class="mb-0">
            <i class="fas fa-user"></i> Employee Information
        </h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Code:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary">@Model.EmployeeCode</span>
                    </dd>
                    
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>
                    
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">
                        <a href="mailto:@Model.Email">@Model.Email</a>
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Department:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-secondary">@Model.DepartmentName</span>
                    </dd>
                    
                    <dt class="col-sm-4">Present Days:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-success">@Model.Presents</span>
                    </dd>
                    
                    <dt class="col-sm-4">Absent Days:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-danger">@Model.Absents</span>
                    </dd>
                    
                    <dt class="col-sm-4">Attendance Rate:</dt>
                    <dd class="col-sm-8">
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar @(Model.AttendancePercentage >= 80 ? "bg-success" : Model.AttendancePercentage >= 60 ? "bg-warning" : "bg-danger")" 
                                 role="progressbar" 
                                 style="width: @Model.AttendancePercentage%">
                                @Model.AttendancePercentage.ToString("F1")%
                            </div>
                        </div>
                    </dd>
                </dl>
            </div>
        </div>
        
        <div class="mt-3">
            <a asp-controller="Employee" asp-action="Details" asp-route-id="@Model.Id" 
               class="btn btn-sm btn-outline-primary">
                <i class="fas fa-eye"></i> View Full Details
            </a>
            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id" 
               class="btn btn-sm btn-outline-warning">
                <i class="fas fa-edit"></i> Edit Employee
            </a>
        </div>
    </div>
</div> 