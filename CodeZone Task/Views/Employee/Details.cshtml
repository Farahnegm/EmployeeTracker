@model CodeZone.BLL.DTOs.EmployeeDto

@{
    ViewData["Title"] = "Employee Details";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Employee Details</h1>

<div class="row">
    <div class="col-md-6">
        @await Html.PartialAsync("_EmployeeDetails", Model)
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar"></i> Attendance Statistics
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h5>@Model.Presents</h5>
                                <small>Present Days</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-danger text-white">
                            <div class="card-body text-center">
                                <h5>@Model.Absents</h5>
                                <small>Absent Days</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <h5>@Model.AttendancePercentage.ToString("F1")%</h5>
                                <small>Attendance Rate</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        @{
            var attendanceHistory = ViewBag.AttendanceHistory as IEnumerable<CodeZone.DAL.Entities.Attendance> ?? new List<CodeZone.DAL.Entities.Attendance>();
        }
        @await Html.PartialAsync("_AttendanceHistory", attendanceHistory)
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div> 