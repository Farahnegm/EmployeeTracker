@model CodeZone.BLL.DTOs.EmployeeDto

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this employee?</h3>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Employee Code</dt>
            <dd class="col-sm-9">@Model.EmployeeCode</dd>

            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.DepartmentName</dd>

            <dt class="col-sm-3">Attendance Statistics</dt>
            <dd class="col-sm-9">
                Present: @Model.Presents | Absent: @Model.Absents | Percentage: @Model.AttendancePercentage.ToString("F1")%
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form> 